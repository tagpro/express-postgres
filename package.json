{
  "name": "galene-be",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "prestart": "tsc",
    "build": "tsc && npm run copy-assets",
    "build-clean": "npm run clean && npm run build",
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "debug": "nodemon --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/src/index.js",
    "docker": "npm run build && docker-compose up",
    "docker-build": "npm run build && docker-compose build",
    "start": "node ./dist/src/index.js",
    "test": "jest --coverage --verbose",
    "serve-debug": "tsc -w && nodemon --inspect dist/src/index.js",
    "watch": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.3.5",
    "express": "^4.16.4",
    "express-promise-router": "^3.0.3",
    "knex": "^2.4.0",
    "objection": "^1.5.3",
    "pg": "^7.8.0",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/knex": "^0.15.1",
    "@types/node": "^10.12.21",
    "@types/shelljs": "^0.8.3",
    "chai": "^4.2.0",
    "express-swagger-generator": "^1.1.11",
    "jest": "^24.0.0",
    "nodemon": "^1.18.9",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  }
}
