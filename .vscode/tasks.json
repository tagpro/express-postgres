{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc-watch",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "options": {
                "shell": {
                    "executable": "${cwd}"
                }
            },
            "isBackground": true,
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        }
    ]
}